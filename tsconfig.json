{
    "compilerOptions": {
      "target": "es5",
      "module": "ESNext",
      "jsx":"react",
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "skipLibCheck": true,
      "declaration": true,
      "declarationDir": "./dist",
      "allowSyntheticDefaultImports": true,
      "emitDeclarationOnly": true,
      "outDir": "./dist",
      "strict": true,
      "lib":["DOM","ESNext","ES2015"],
      "importHelpers": true
    },
    "include": [
		"./src"
	],
    "exclude": [
		"./dist",
		"./node_modules",
	]
  }